<div class="container mx-auto">
  <div class="card bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-6 relative">

    <h2 class="text-2xl text-gray-700 font-bold text-center flex items-center justify-center mb-6">
    一週間の献立と買い物リスト 自動生成
    </h2>

    <%#= form_with(model: @advice, local: true, html: { id: "advice-form" }) do |f| %>

      <div class="space-y-4">
      <div class="field">
        <%= f.label :name,"一週間の予算（必須）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :name, class: "input input-bordered w-full max-w-xs", placeholder: "予算を入力" %>
      </div>

      <div class="field">
        <%= f.label :email,"人数 (必須)",class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :email, class: "input input-bordered w-full max-w-xs", placeholder: "人数を入力" %>
      </div>

      <div class="field">
        <%= f.label :allergy,"アレルギー・嫌いな食べ物", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field  :allergy, class: "input input-bordered w-full max-w-xs", placeholder: "献立に入れて欲しくない食材を追加" %>
      </div>

      <div class="field">
        <%= f.label :favorit,"好きな食べ物", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field  :favorit, class: "input input-bordered w-full max-w-xs", placeholder: "献立に入れて欲しい食材を追加" %>
      </div>


      <div class="text-center">
        <%= f.submit "献立を作成", class: "btn btn-primary text-base-100 w-full md:w-auto shadow-md hover:shadow-lg transition-all" %>
      </div>
      </div>

    <% end %>

  </div>
</div>