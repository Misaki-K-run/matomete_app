<div class="text-center mb-8">
  <h1 class="text-xl font-bold">マイページ</h1>
</div>
<!-- マイページ情報 -->
<div class="flex flex-col items-center w-full">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow flex">
    <div class="avatar">
      <div class="w-24 rounded-full mr-4">
        <%= image_tag 'user-icon.png' %>
      </div>
    </div>
    <div class="flex flex-col">
      <h3>アカウント名：<%= current_user.name %></h3>
      <h3>予算：<%#= current_user.buget %></h3>
      <h3>人数：<%#= current_user.people %></h3>
      <h3><%#= current_user.introduce %></h3>
    </div>
  </div>
</div>
<!-- リンク情報 -->
<div class="w-full flex items-center my-5">
  <%= link_to "#", class: "flex flex-col items-center flex-1 py-2 text-gray-500 hover:text-gray-700 transition-colors duration-200" do %>
    <%= image_tag 'heart.svg', alt: "heart", class: "h-6 w-6 mb-1" %>
  <% end %>

  <div class="border-l border-gray-300 h-8 mx-2"></div> <!-- 縦線 -->

  <%= link_to "#", class: "flex flex-col items-center flex-1 py-2 text-gray-500 hover:text-gray-700 transition-colors duration-200" do %>
    <%= image_tag 'pencil-square.svg', alt: "Home", class: "h-6 w-6 mb-1" %>
  <% end %>
</div>
<div class="w-full">
<!-- 自分の投稿一覧 -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 justify-between">
    <% if @posts.present? %>
      <%= render partial: 'posts/post_card', collection: @posts, as: :post %>
    <% else %>
      <p class="text-gray-700 text-center">該当する投稿が見つかりませんでした。</p>
    <% end %>
  </div>

</div>
