<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>一週間の献立表</h1>
      <%= form_with model: @post, class: "new_post" do |f| %>
        <div class="mb-3">
          <%= f.label :memo,"メモ" %>
          <%= f.text_field :memo, class: "form-control",placeholder: "フリーテキストを入力" %>
        </div>
        <div class="mb-3">
          <%= f.label :sum,"合計" %>
          <%= f.number_field :sum, class: "form-control",placeholder: "数字を入力" %>
        </div>
        <%= f.submit "投稿", class: "btn" %>
      <% end %>
    </div>
  </div>
</div>