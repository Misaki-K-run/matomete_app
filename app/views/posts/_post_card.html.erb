<a href="<%= post_path(post) %>" class="block w-full">
<div class="card bg-base-100 w-full max-w-xs shadow-xl hover:shadow-2xl transition">
  <div class="card-body">
    <div class="overflow-x-auto">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>一週間の献立表</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>月</th>
        <td><%= post.menu.monday if post.menu %></td>
      </tr>
      <tr>
        <th>火</th>
        <td><%=post.menu.tuesday if post.menu %></td>
      </tr>
      <tr>
        <th>水</th>
        <td><%=post.menu.wednesday if post.menu %></td>
      </tr>
      <tr>
        <th>木</th>
        <td><%=post.menu.thursday if post.menu %></td>
      </tr>
      <tr>
        <th>金</th>
        <td><%=post.menu.friday if post.menu %></td>
      </tr>
      <tr>
        <th>土</th>
        <td><%=post.menu.saturday if post.menu %></td>
      </tr>
      <tr>
        <th>日</th>
        <td><%=post.menu.sunday if post.menu %></td>
      </tr>
    </tbody>
  </table>
</div>
    <% if post.sum.present? %>
        <div class="flex justify-end">
          <h3 class="card-title">合計: <%= post.sum %>円</h3>
        </div>
    <% end %>
    <!--user image,buget,people追加後変更する-->
    <div class="avatar">
      <div class="w-24 rounded-full">
      <%= image_tag 'user-icon.png' %>
    </div>
    <div class="card-actions">
      <div class="flex flex-col items-center space-y-2">
        <div class="badge badge-outline">予算</div>
        <div class="badge badge-outline">人数</div>
      </div>
    </div>
  </div>
</div>
</a>